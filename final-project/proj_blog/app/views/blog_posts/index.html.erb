<br>
<div class="row">
  <%if(params[:admin])%>
    <div class="col-md-10">
      <h2>Admin's Posts</h2>
    </div>
  <%else%>
    <div class="col-md-10">
      <h2>All Posts</h2>
    </div>
    <div class="col-md-2">
      <a class="btn btn-primary float-right" href="<%=new_blog_post_path%>" role="button">Write</a>
    </div>
  <%end%>
</div>
<br>
<ul class="list-group">
  <% @blog_posts.each do |blog_post| %>
    <li class="list-group-item d-flex justify-content-between align-items-center border border-secondary">
      <a href="<%= blog_post_path(id: blog_post.id) %>">
        <%= blog_post.title %>
      </a>
    </li>
  <% end %>
</ul>
